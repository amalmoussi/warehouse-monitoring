<h1 class="text-center text-lg"> <b><i>Articles</i></b></h1>
<div class="text-center ">
Our blog has <%= Article.public_count %> articles and counting!<br><br>

<button class="bg-slate-300 p-3.5 decoration-black py-px decoration-auto inline-block text-base cursor-pointer rounded-3xl mb-10">
<%= link_to "New Article", new_article_path %>
</button>
<br>
<button class="bg-slate-300 p-3.5 decoration-black py-px decoration-auto inline-block text-base cursor-pointer rounded-3xl">
 <%= link_to 'LogOut', destroy_user_session_path, method: :delete %></button>
</div>
<br>
<div class="grid grid-col-1 gap-4 sm:grid-cols-2 md:grid-cols-4">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
         <div class="w-full rounded overflow-hidden shadow-lg text-center">
            <div class="font-bold text-xl mb-2"> 
              <%= link_to article.title, article %> </div>
              <div class="w-full items-center h-72 bg-center bg-cover" style="background-image: url('<%= url_for(article.image) %>')">
              </div>
              <div class="px-6 py-4">
                <p class="text-gray-700 text-base">
                  <%= link_to article.body, article %> 
                </p>
              </div>
              <% article.comments.each do |comment| %>
                <div class="px-6 pt-4 pb-2">
                  <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                    <%= comment.body %>
                    <%= comment.commenter %>
                    <%= current_user.email %>
                  </span>
                </div>
              <% end %>
            </div> 
      <% end %>
    <% end %>
</div>